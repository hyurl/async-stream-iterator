{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true
    },
    "includes": [
        "src/*.ts",
        "src/*/*.ts",
        "src/*/*/*.ts"
    ],
    "exclude": [
        "examples/*",
        "./node_modules/*"
    ]
}